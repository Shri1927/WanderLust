<% layout("layouts/boilerplate") %>
<body>
    <h2>All Listings</h2>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 ">
      <%for(let listing of allListings){ %>
        <a  class="listing-link" href="/listings/<%= listing._id %>">
        <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 12rem;">
            <div class="card-img-overlay">Wanderlust</div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                &#8377;<%= listing.price %> / night
              </p>
            </div>
        </div>
      </a>
        <% } %>
    </div>
</body>

